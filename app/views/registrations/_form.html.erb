<%= form_for(@registration, :class => "well form-inline") do |f| %>
  <% if @registration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

      <ul>
      <% @registration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, :class => :required %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email, :class => :required %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label 'can we email you about future events?', :class => :small %><br>
    <%= f.check_box :can_email %>
  </div>
  <div class="field">
    <%= f.label "Team Name" %><br>
    <%= f.text_field :team_name %>
  </div>
  <div class="field">
    <%= f.label :birthday, :class => :required %><br>
    <%= f.date_select :birthday, :prompt => {:year => 'year', :month => 'month', :day => 'day'}, :start_year => Date.current.year, :end_year => 1920 %>
  </div>
  <div class="field">
    <%= f.label :address, :class => :required %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city, :class => :required %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state, :class => :required %><br>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip, :class => :required %><br>
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :phone, :class => :required %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
